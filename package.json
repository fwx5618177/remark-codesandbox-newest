{
  "name": "remark-codesandbox",
  "version": "1.0.0",
  "description": "Create CodeSandbox directly from code blocks",
  "main": "src/main.ts",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx -y only-allow pnpm",
    "test": "mocha --import=tsx 'src/**/*.spec.ts' 'tests/**/*.spec.ts'",
    "start": "cross-env NODE_ENV=production node --import tsx dist/main.js",
    "pub:beta": "npm version prerelease --preid=beta",
    "pub:patch": "npm version patch",
    "type-check": "tsc --noEmit",
    "rm": "rimraf dist",
    "build": "swc src -d dist --source-maps -D --strip-leading-paths",
    "build:clean": "npm run rm && npm run build",
    "build:prod": "npm run rm && npm run type-check && npm run build",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.js . --cache --debug",
    "lint:fix": "eslint --ignore-path .gitignore --ext .ts,.js --fix . --cache --debug",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.{ts,js}\""
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.4.11",
    "@types/node": "^20.12.2",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "chai": "^5.1.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1"
  },
  "dependencies": {
    "typescript": "^5.4.4"
  }
}
