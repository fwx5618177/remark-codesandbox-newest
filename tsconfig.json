{
    "compilerOptions": {
        "checkJs": true,
        "strict": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "rootDir": "./src",
        "baseUrl": "./src",
        "outDir": "./dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./dist",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "**/*.spec.ts", "types"],
    "exclude": ["node_modules", "dist", "**/dist", "**/*.spec.ts"],
    "ts-node": {
        "esm": true
    }
}
