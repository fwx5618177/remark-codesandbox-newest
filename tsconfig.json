{
    "compilerOptions": {
        "checkJs": true,
        "strict": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "declarationDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "include": ["./src"],
    "exclude": ["node_modules", "dist", "**/dist", "**/*.spec.ts"],
    "ts-node": {
        "esm": true
    }
}
