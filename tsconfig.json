{
    "compilerOptions": {
        "checkJs": true,
        "strict": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "./dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./dist",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "tests/**/*.spec.ts", "types"],
    "exclude": ["node_modules", "dist", "**/dist"],
    "ts-node": {
        "esm": true
    }
}
